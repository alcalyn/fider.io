{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "public/assets/*"
      ],
      "@content/*": [
        "content/*"
      ],
      "@content/blog/*": [
        "content/blog/*"
      ],
      "@content/docs/*": [
        "content/docs/*"
      ],
      "@app/fns": [
        "src/fns/index"
      ],
      "@app/fns/*": [
        "src/fns/*"
      ],
      "@app/hooks": [
        "src/hooks/index"
      ],
      "@app/hooks/*": [
        "src/hooks/*"
      ],
      "@app/components": [
        "src/components/index"
      ],
      "@app/components/*": [
        "src/components/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
